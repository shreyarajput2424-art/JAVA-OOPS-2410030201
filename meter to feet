import java.util.Scanner;

public class MeterToFeet {
    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);

        System.out.print("Enter meters: ");
        float m = s.nextFloat();

        float f = m * 3.28084f;

        System.out.println(m + " meters = " + f + " feet");

        s.close();
    }
}
